@model LibraryWeb.Models.Entity.Authors
@{
    ViewBag.Title = "GetAuthor";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("UpdateAuthor", "Author", FormMethod.Post))
{
    <div class="form-group" style="margin-right: 50px; margin-bottom: 15px; margin-top: 30px; ">
        @Html.LabelFor(a => a.ID)
        @Html.TextBoxFor(a => a.ID, new { @class = "form-control" })
    </div>
    <div class="form-group" style="margin-right: 50px; margin-bottom: 15px;">
        @Html.LabelFor(a => a.NAME)
        @Html.TextBoxFor(a => a.NAME, new { @class = "form-control" })
    </div>
    <div class="form-group" style="margin-right: 50px; margin-bottom: 15px;">
        @Html.LabelFor(a => a.SURNAME)
        @Html.TextBoxFor(a => a.SURNAME, new { @class = "form-control" })
    </div>
    <div class="form-group" style="margin-right: 50px; margin-bottom: 15px;">
        @Html.LabelFor(a => a.DETAIL)
        @Html.TextAreaFor(a => a.DETAIL, new { @class = "form-control" })
    </div>
    <button class="btn btn-warning">Güncelle</button>
}

